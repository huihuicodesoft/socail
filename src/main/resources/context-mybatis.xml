<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="context-druid.xml"/>

    <bean id="configuration" class="org.apache.ibatis.session.Configuration">
        <property name="defaultStatementTimeout" value="25000"/>
    </bean>

    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource" />
        <property name="configuration" ref="configuration"/>
        <property name="typeAliasesPackage" value="cn.com.wh.social.app.pojo"/>
        <property name="mapperLocations" value="classpath:cn/com/wh/social/app/dao/**/*Dao.xml"/>
    </bean>

    <bean id="userDao" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="cn.com.wh.social.app.dao.user.UserDao" />
        <property name="sqlSessionFactory" ref="sqlSessionFactory" />
    </bean>
</beans>