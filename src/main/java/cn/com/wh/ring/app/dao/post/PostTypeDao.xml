<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.wh.ring.app.dao.post.PostTypeDao">
    <resultMap id="postTypeResultMap" type="PostTypePojo">
        <id property="id" column="ID"/>
        <result property="name" column="NAME"/>
        <result property="description" column="DESCRIPTION"/>
        <result property="symbol" column="SYMBOL"/>
        <result property="support" column="SUPPORT"/>
        <result property="state" column="STATE"/>
        <result property="createTime" column="CREATE_TIME" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="query" resultMap="postTypeResultMap">
        SELECT * FROM post_type WHERE STATE = #{state}
       <if test="maxId > 0">
           <![CDATA[
            AND id <= #{maxId}
            ]]>
       </if>
    </select>
</mapper>